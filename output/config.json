{
    "dataset_reader": {
        "type": "toxic",
        "max_length": 5000
    },
    "model": {
        "type": "toxic",
        "classifier_feedforward": {
            "activations": [
                "tanh",
                "linear"
            ],
            "dropout": [
                0.2,
                0
            ],
            "hidden_dims": [
                200,
                6
            ],
            "input_dim": 200,
            "num_layers": 2
        },
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "dropout": 0.2,
            "hidden_size": 100,
            "input_size": 100,
            "num_layers": 2
        },
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 100,
                    "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.6B.100d.txt.gz",
                    "trainable": false
                }
            }
        }
    },
    "train_data_path": "data/toxic/train.csv",
    "validation_data_path": "data/toxic/val.csv",
    "test_data_path": "data/toxic/test.csv",
    "trainer": {
        "cuda_device": -1,
        "grad_clipping": 5,
        "num_epochs": 40,
        "optimizer": {
            "type": "adagrad"
        },
        "patience": 3,
        "validation_metric": "+f1"
    },
    "data_loader": {
        "batch_size": 64
    }
}